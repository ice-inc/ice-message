<p id="notice"><%= notice %></p>

<h1>稼動ログ一覧</h1>

<table class='table'>
  <thead>
    <tr>
      <th>案件</th>
      <th>稼働時間</th>
      <th>ユーザ</th>
      <th>日付</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @action_logs.each do |action_log| %>
      <tr>
        <td><%= action_log.project.name %></td>
        <td><%= action_log.took_time %></td>
        <td><%= action_log.user.username %></td>
        <td><%= action_log.created_at.strftime("%Y/%m/%d") %></td>
        <td><%= link_to 'Show', action_log %></td>
        <td><%= link_to 'Edit', edit_action_log_path(action_log) %></td>
        <td><%= link_to 'Destroy', action_log, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '稼働ログを追加', new_action_log_path, :class => 'btn btn-info' %>
